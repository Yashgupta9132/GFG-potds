// Java 

import java.util.HashMap;
import java.util.Map;

class Solution {
    public int romanToDecimal(String s) {
        int n = s.length();
        Map<Character, Integer> mp = new HashMap<>();
        mp.put('I', 1);
        mp.put('V', 5);
        mp.put('X', 10);
        mp.put('L', 50);
        mp.put('C', 100);
        mp.put('D', 500);
        mp.put('M', 1000);

        if (n == 1) return mp.get(s.charAt(0));

        int total = 0;
        for (int i = 0; i < n - 1; i++) {
            if (mp.get(s.charAt(i + 1)) > mp.get(s.charAt(i))) {
                total += mp.get(s.charAt(i + 1)) - mp.get(s.charAt(i));
                i++; 
            } else {
                total += mp.get(s.charAt(i));
            }
        }

        if (n >= 2 && mp.get(s.charAt(n - 1)) <= mp.get(s.charAt(n - 2))) {
            total += mp.get(s.charAt(n - 1));
        }

        return total;
    }
}
