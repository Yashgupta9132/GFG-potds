// Java 

class Solution {
    public Node reverse(Node head) {
        if (head == null || head.next == null) {
            return head;
        }

        Node curr = head;
        Node newHead = null;

        while (curr != null) {
            Node temp = curr.prev;
            curr.prev = curr.next;
            curr.next = temp;

            newHead = curr;

            curr = curr.prev;
        }

        return newHead;
    }
}
