// Java 

class Solution {
    public int getMinDiff(int[] arr, int k) {
        int n = arr.length;
        Arrays.sort(arr);

        int ans = arr[n - 1] - arr[0];  

        for (int i = 0; i < n - 1; i++) {
            int minVal = Math.min(arr[0] + k, arr[i + 1] - k);
            int maxVal = Math.max(arr[i] + k, arr[n - 1] - k);

            if (minVal < 0) continue; 
            ans = Math.min(ans, maxVal - minVal);
        }
        return ans;
    }
}
